{
  "name": "chatbot",
  "version": "1.0.6",
  "electronVersion": "1.8.1",
  "description": "A simple chatbot client",
  "productName": "chatbot",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "gan": "node ./render/gan.js",
    "gan-debug": "set DEBUG = \"*\" && node ./render/gan.js",
    "package": "npm-run-all pack:*",
    "pack-win-mac": "electron-packager ./ chatbot --out ../dist --overwrite --asar --platform=win32,darwin --arch=x64,ia32 --ignore=./appData --icon=./img/icon/icon.ico",
    "pack-all": "electron-packager ./ --out ../dist --all --overwrite --asar --ignore=./appData --icon=./img/icon/icon.ico",
    "pack:win64": "electron-packager ./ --out ../dist --overwrite --asar --ignore=./appData --icon=./img/icon/icon.ico",
    "pack:win32": "electron-packager ./ --out ../dist --overwrite --ignore=./appData --icon=./img/icon/icon.ico --platform=win32 --arch=ia32",
    "pack:mac": "electron-packager ./ --out ../dist --overwrite --asar --ignore=./appData --icon=./img/icon/icon.ico --platform=darwin --arch=x64",
    "winstall": "node winstall.js",
    "release": "electron-builder",
    "build-dir": "electron-builder --dir",
    "publish": "electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chunwei/chatbot-client.git"
  },
  "bugs": {
    "url": "https://github.com/chunwei/chatbot-client/issues"
  },
  "keywords": [
    "chatbot",
    "bot",
    "chat",
    "ai"
  ],
  "author": "luchunwei",
  "license": "MIT",
  "dependencies": {
    "ajv": "^5.3.0",
    "ajv-keywords": "^2.1.1",
    "baidu-aip-sdk": "^1.4.0",
    "debug": "^3.1.0",
    "electron-updater": "^2.16.1",
    "glob": "^7.1.2"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^1.8.1",
    "electron-builder": "^19.45.4",
    "electron-packager": "^9.1.0",
    "electron-winstaller": "^2.6.3",
    "eslint": "^4.9.0",
    "eslint-config-google": "^0.9.1",
    "jasmine": "^2.8.0",
    "jasmine-spec-reporter": "^4.2.1",
    "npm-run-all": "^4.1.1"
  },
  "build": {
    "appId": "ai.rsvp.chatbot",
    "copyright": "Copyright Â© 2017 RSVP",
    "productName": "chatbot",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "nsis": {
      "artifactName": "${productName}-${os}-${arch}-setup-${version}.${ext}"
    },
    "dmg": {
      "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }]
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "zip",
        "dmg"
      ],
      "publish": [
      {
        "provider": "generic",
        "url": "http://www.faxiaobot.cn/chatbot/updates/latest/mac/"
      }]
    },
    "win": {
      "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }],
      "publish": [
      {
        "provider": "generic",
        "url": "http://www.faxiaobot.cn/chatbot/updates/latest/win/"
      }]
    },
    "linux": {
      "category": "Tools",
      "target": [
        "AppImage",
        "deb"
      ],
      "publish": [
      {
        "provider": "generic",
        "url": "http://www.faxiaobot.cn/chatbot/updates/latest/linux/"
      }]
    }
  }
}
